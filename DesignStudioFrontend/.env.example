# Set to 'true' to bypass authentication and use mock data
REACT_APP_BYPASS_AUTH=false

# Base URL for API endpoints (leave empty for same-origin)
REACT_APP_API_BASE_URL=

# OAuth configuration
REACT_APP_OAUTH_AUTHORIZATION_URL=https://identity.example.com/oauth2/authorize
REACT_APP_OAUTH_CLIENT_ID=your-client-id
REACT_APP_OAUTH_REDIRECT_URI=http://localhost:3000
REACT_APP_OAUTH_SCOPE=openid

# Site URL for email redirects etc
REACT_APP_SITE_URL=http://localhost:3000
